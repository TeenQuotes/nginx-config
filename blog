server {
    listen 80;

    server_name blog.teen-quotes.com;
    root /var/www/blog;
        
    index index.php;
    try_files $uri $uri/ /index.php;

    if ($http_x_forwarded_proto = http) {
       return 301 https://$server_name$request_uri;
    }
            
    include sites-available/includes/php-config;
}
