server {
    server_name pma.teen-quotes.com;
    root /usr/share/phpmyadmin;
    index index.php;
    
    location ~ \.php$ {
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        include fastcgi_params;
    }
    
    # Connect only through localhost
    location / {
        satisfy any;
        allow 127.0.0.1;
        deny all;
    }
}